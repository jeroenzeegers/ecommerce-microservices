# Datadog Configuration
# Copy this file to .env and fill in your Datadog API key

# Required: Your Datadog API key
DD_API_KEY=your-datadog-api-key-here

# Datadog site (US: datadoghq.com, EU: datadoghq.eu)
DD_SITE=datadoghq.com

# Environment name
DD_ENV=development

# APM Configuration
DD_APM_ENABLED=true
DD_APM_NON_LOCAL_TRAFFIC=true

# Logs Configuration
DD_LOGS_ENABLED=true
DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL=true

# Process monitoring
DD_PROCESS_AGENT_ENABLED=true

# StatsD Configuration
DD_DOGSTATSD_NON_LOCAL_TRAFFIC=true

# Java Agent Configuration (for services)
DD_AGENT_HOST=datadog-agent
DD_TRACE_AGENT_PORT=8126
DD_PROFILING_ENABLED=false
DD_JMXFETCH_ENABLED=false

# Service-specific configuration (override in docker-compose if needed)
DD_SERVICE_MAPPING=mysql:mysql,mongodb:mongodb,zookeeper:zookeeper,broker:kafka